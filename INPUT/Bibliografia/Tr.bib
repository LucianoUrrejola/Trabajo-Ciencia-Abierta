@book{esq2012,
	title = {Las lógicas del cuidado infantil: entre las familias, el estado y el mercado},
	isbn = {978-987-21625-1-1},
	shorttitle = {Las lógicas del cuidado infantil},
	url = {https://argentina.unfpa.org/es/publicaciones/las-lógicas-del-cuidado-infantil-entre-las-familias-el-estado-y-el-mercado},
	abstract = {Las lógicas del cuidado infantil. Entre las familias, el Estado y el mercado, edited by Valeria Esquivel, Eleonor Faur, and Elizabeth Jelin. Buenos Aires: Instituto de Desarrollo Económico y Social - IDES; Fondo de Población de las Naciones Unidas - UNFPA; Fondo de Naciones Unidas para la Infancia – UNICEF, 2012. This book’s main premise is that care is crucial to well-being. As such, the study of care as a dimension of development and welfare needs no justification. Rather, what is needed are studies that reveal the ways in which care is provided, as well as the deficits and the spaces where public interventions are required in order to ensure well-being, social equity, and human development. In turn, the logics of care respond to social and cultural patterns of relations between genders and between social classes. It is in this latter sense that the ways in which societies faces the provision of childcare has significant implications for the achievement of gender equality, by enabling expanded capabilities and options for men and women, or, on the contrary, by confining women to traditional roles associated with femininity and motherhood. What are the current childcare needs? Who provides childcare? Which work/care arrangements do families put in place in order to provide childcare? What factors determine these work/care arrangements? What types of arrangements contribute to gender equity? Could public policies contribute to satisfy childcare needs and at the same time contribute to moderate gender inequities? These are some of the questions this book tries to answer, elaborating on the Argentinean context, and in particular on Greater Buenos Aires. This book includes theoretical chapters –as those devoted to the development of the notion of care– and other analytical and/or empirical chapters, which are based on quantitative and qualitative information to analyze the recent transformations of households and families, the provision of care from the perspective of households and from domestic employment. In addition, this book includes a photo essay about childcare, or rather, on modes of childcare provision, which can perhaps be communicated better in pictures than in words.},
	language = {spa},
	author = {Esquivel, Valeria and Faur, Eleonor and Jelin, Elizabeth and Pereyra, Francisca and Bruno, Matias},
	month = jul,
	year = {2012}
}

